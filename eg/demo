#!perl
use v5.30.0;
use warnings;

use lib 'lib';
use Wink;

my $bank = Wink->get_bank;

for my $name (sort $bank->device_names) {
  my $device = $bank->device_named($name);

  $device->fadeto('ff0000');
  sleep 1;

  $device->fadeto('00ff00', 50, 1);
  sleep 1;

  $device->fadeto('0000ff', 50, 2);
  sleep 1;

  $device->fadeto('ffffff');
  sleep 2;

  $device->off;
}
